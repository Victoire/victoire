<div id="container-{{ id|default('modal') }}">
    <div class="modal fade" id="{{ id|default('modal') }}" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                {% block body_content %}
                    <div class="modal-body" id="modal-body">
                        <h2>My Custom modal</h2>
                        {% block body_content_main %}
                            {{ cms_slot_widgets('fancy_slot') }}
                        {% endblock body_content_main %}
                    </div>
                {% endblock body_content %}
            </div>
        </div>
    </div>
    
    <script type="text/javascript">
        jQuery(document).ready(function() {
            $("#{{ id|default('modal') }}").modal("toggle");
            
            $("#container-{{ id|default('modal') }}").on('hidden.bs.modal', function () {
                $(this).remove();
            });
        });
    </script>
</div>
