{% extends 'VictoireCoreBundle:Layout:layout.html.twig' %}

{% block head_style %}
    {{ parent() }}
    <link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" type="text/css" rel="stylesheet" media="screen" />
    <style>
        .modal-dialog {
            margin-top: 80px;
        }
    </style>
    {% stylesheets filter='less, cssrewrite' injector="alertify-notie" %}
        <link href="{{ asset_url }}" type="text/css" rel="stylesheet" media="screen" />
    {% endstylesheets %}
{% endblock head_style %}

{% block head_script %}
    <script type="text/javascript">
        window.jsErrors = [];
        window.onerror = function(error, url, line) {
            window.jsErrors.push(error + ". Line: " + line);
        };
    </script>
    {{ parent() }}
{% endblock head_script %}

{% block foot_script %}
    {{ parent() }}
    {% javascripts injector="alertify-notie" %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    <script src="{{ url('bazinga_jstranslation_js', { 'domain': 'messages'}) }}?locales={{ victoire_i18n_available_locales|default([])|join(',') }}"></script>
{% endblock foot_script %}
