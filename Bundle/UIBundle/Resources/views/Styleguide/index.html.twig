        <header class="ts-header{% if focus %} ts-header--focus{% endif %}">
            <a class="ts-header__anchor ts-header__title" {% if focus %} href="{{ path('victoire_ui_styleguide') }}"{% else %}data-toggle="sidebar"{% endif %}>
