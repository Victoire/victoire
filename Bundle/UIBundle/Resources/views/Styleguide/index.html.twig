{% extends 'VictoireCoreBundle:Layout:layout.html.twig' %}

{% block head_style %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('bundles/victoireui/stylesheets/main-styleguide.css') }}"/>
{% endblock head_style %}

{% block container_class %}ts-body{% endblock %}

{% block body_content %}
