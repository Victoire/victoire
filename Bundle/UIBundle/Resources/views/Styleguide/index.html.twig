                </svg>

                <h1 class="ts-header__heading">styleguide</h1>
            </a>

            <a class="ts-header__anchor ts-header__anchor--go-sidebar" href="#sidebar">menu</a>
        </header>

        {% if not focus %}
            <h1>Styleguide</h1>
        {% endif %}

        {% for component in components %}
            {% set component = component|lower|replace({ ' ': '-' }) %}
            <section class="ts-section{% if focus %} ts-section--focus{% endif %}" id="{{ component }}">
                {% include 'VictoireUIBundle:Styleguide:components/_' ~ component  ~ '.html.twig'  %}
            </section>
        {% endfor %}
    </main>
{% endblock body_content %}

{% block foot_script %}
    {{ parent() }}
    <script src="{{ asset('/bundles/victoireui/scripts/styleguide.bundle.js') }}"></script>
{% endblock foot_script %}
