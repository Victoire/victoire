    {% form_theme subform 'VictoireMediaBundle:Form:fields.html.twig' %}

    {{ form_start(subform, { 'action': path('VictoireMediaBundle_folder_sub_create', { 'folderId' : folder.id }  ), 'attr': { 'id': 'addsub-moda-form' } }) }}
        <div class="modal-header">
        	<button class="close" data-dismiss="modal">&times;</button>
            <h3>{{ 'media.folder.addsub.modal.title' |trans({}, 'victoire') }}</h3>
        </div>
        <div class="modal-body">
	        {{ form_widget(subform) }}
        </div>
        <div class="modal-footer">
            <div class="btn_group">
	            <button class="btn btn-primary" type="submit">{{ 'media.folder.addsub.modal.save' |trans({}, 'victoire') }}</button>
	            <button class="btn" type="reset" data-dismiss="modal">{{ 'form.cancel' |trans({}, 'victoire') }}</button>
	    	</div>
        </div>
    {{ form_end(subform) }}

    <script>
        $(document).ready(function () {
            // bind 'myForm' and provide a simple callback function
            jQuery('#addsub-moda-form').ajaxForm(function (data) {
                jQuery('#addsub-modal').html(data);
            });
        });
    </script>
