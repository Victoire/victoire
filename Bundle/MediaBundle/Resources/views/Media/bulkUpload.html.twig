{% extends 'VictoireMediaBundle:Default:layout.html.twig' %}

{% block title %}
    {% set title = 'media.media.bulkupload.addto' %}
    {{ title |trans({'%folder%': folder.name}, 'victoire') }}
{% endblock%}

{% block header %}
    <div class="page-header">
        {% set title = 'media.media.bulkupload.addto' %}
        <h1>{{ title |trans({'%folder%': folder.name}, 'victoire') | capitalize | raw }}</h1>
    </div>
{% endblock %}

{% block content %}
    {% form_theme form 'VictoireMediaBundle:Form:fields.html.twig' %}
    {{ form_start(form, { 'action': path('VictoireMediaBundle_media_bulk_upload', { 'folderId' : folder.id } ), 'attr': { 'class': 'form-horizontal properties' } }) }}
        <div class="prop_wrp">
            {{ form_widget(form) }}
            <div class="input_prop">
                <div class="btn_group">
                    <button class="btn" onclick="window.location = '{{ path('VictoireMediaBundle_folder_show', { 'folderId' : folder.id } ) }}'" type="reset">{{ 'form.cancel' |trans({}, 'victoire') }}</button>
                    <button class="btn btn-primary" type="submit">{{ 'media.bulkupload.upload' |trans({}, 'victoire') }}</button>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}
