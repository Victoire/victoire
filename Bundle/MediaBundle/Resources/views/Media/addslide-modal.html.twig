<div id="addslide-modal" class="modal hide fade">

    {% form_theme forms.slideform 'VictoireMediaBundle:Form:fields.html.twig' %}
    {{ form_start(forms.slideform, { 'action': path('VictoireMediaBundle_media_modal_create', { 'folderId' : folder.id, 'type': 'slide' }  )}) }}
        <div class="modal-header">
            <button class="close" data-dismiss="modal">&times;</button>
            <h3>{{ 'media.slide.modal.title' |trans({}, 'victoire') }}</h3>
        </div>
        <div class="modal-body--upload">{{ form_widget(forms.slideform) }}</div>
        <div class="modal-footer">
            <div class="btn_group">
                <button class="btn btn-primary" type="submit">{{ 'media.slide.modal.save' |trans({}, 'victoire') }}</button>
                <button class="btn" type="reset" data-dismiss="modal">{{ 'form.cancel' |trans({}, 'victoire') }}</button>
            </div>
        </div>
    {{ form_end(forms.slideform) }}
</div>
